---
import ProjectCard from "@/components/ProjectCard.astro";
import Base from "@/layouts/Base.astro";
import { getListPage, getSinglePage } from "@/lib/contentParser.astro";
import CallToAction from "@/partials/CallToAction.astro";
import FAQs from "@/partials/FAQs.astro";
import PageHeader from "@/partials/PageHeader.astro";

const postIndex = await getListPage(
  "projects",
  "-index",
);
if(postIndex.data.draft){
  return Astro.redirect("/404");
}

const projectsSingle = await getSinglePage("projects");
---

<Base {...postIndex.data}>
  <PageHeader title={postIndex?.data.title} />

  <section class="section">
    <div class="container">
      <div class="md:columns-2 gap-x-[150px]">
        {
          projectsSingle?.map((project, i) => (
            <ProjectCard project={project} index={i} />
          ))
        }
      </div>
    </div>

    <CallToAction />
    <FAQs isNoSectionBottom={true} isNoSectionTop={true} />
  </section>
</Base>
