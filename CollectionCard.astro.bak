---
interface Props {
  eyebrow: string;
  title: string;
  description: string;
  image: string;
  linkLabel: string;
  collectionSlug: string;
}

const { eyebrow, title, description, image, linkLabel, collectionSlug } = Astro.props;

// Generate image path - all showcase images use the same placeholder for now
const imagePath = `/images/wallpapers/storiesoflife/${image}`;
---

<div class="collection-card group">
  <a href={`/catalogo?coleccion=${collectionSlug}`} class="block">
    {/* Image */}
    <div class="card-image-wrapper relative overflow-hidden mb-4" style="aspect-ratio: 1 / 1.05; border-radius: 0.85rem;">
      <img
        src={imagePath}
        alt={title}
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
        loading="lazy"
      />
    </div>

    {/* Content */}
    <div class="card-content">
      {eyebrow && (
        <p class="card-eyebrow text-xs uppercase tracking-widest text-gray-500 mb-2" style="font-family: var(--font-secondary), 'Playfair Display', serif; font-style: italic;">
          {eyebrow}
        </p>
      )}
      <h3 class="card-title font-bold mb-3 uppercase" class="group-hover:text-primary transition-colors" style="font-size: clamp(1.4rem, 3vw, 2rem);">
        {title}
      </h3>
      <p class="card-description text-gray-600 mb-4 line-clamp-3">
        {description}
      </p>
      <span class="card-link inline-flex items-center text-sm font-semibold uppercase tracking-wider text-primary group-hover:gap-2 transition-all">
        {linkLabel}
        <svg
          class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"
          />
        </svg>
      </span>
    </div>
  </a>
</div>

<style>
  .collection-card {
    transition: transform 0.3s ease;
  }

  .collection-card:hover {
    transform: translateY(-4px);
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
